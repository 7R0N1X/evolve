---
import "@fontsource/pt-sans";

import { Image } from "astro:assets";
import bg from "/public/get in touch/1.avif";
---

<section data-aos="fade-up" data-aos-anchor-placement="top-bottom" class="relative w-full lg:h-[592px]">

  <Image src={bg} alt="" class="absolute w-full min-h-full max-h-full object-cover" />

  <section class="relative w-full h-full max-w-screen-xl m-auto flex flex-col lg:flex-row justify-between items-center px-4">

    <section class="lg:h-[472px]">
      <h2 class="uppercase max-lg:text-center text-2xl lg:text-3xl font-bold text-white lg:w-96 max-lg:mt-5 mb-5">SEE what all the hype is about?</h2>      
      <p class="max-lg:text-center text-white max-lg:mb-5">Come down and take a look for yourself.</p>
    </section>

    <section class="w-full sm:w-[439px] min-h-[472px] max-h-[472px] p-[30px] max-lg:mb-5 bg-[#555455] rounded-[14px] ring-1 ring-white/50 border">
      <h3 class="text-white text-2xl font-bold text-center">GET IN TOUCH</h3>      
      <p class="text-white text-center mb-10">Get 50% off your first month</p>   

      <form action="" class="flex flex-col gap-[18px] text-white">
        <input type="text" name="" id="" placeholder="Your name" class="rounded-xl h-11 bg-[#434243] p-4">
        <input type="tel" name="" id="" placeholder="Your contact number" class="rounded-xl h-11 bg-[#434243] p-4">
        <textarea name="" id="" placeholder="How can we help?" class="rounded-xl h-32 bg-[#434243] p-4"></textarea>
      </form>

      <section class="w-full flex justify-between mt-[18px]">
        <a href="" class="flex items-center justify-center w-32 h-8 text-xs text-white border rounded-full">REQUEST CALLBACK</a>
        <a href="" class="flex items-center justify-center w-20 h-8 text-xs bg-white rounded-full">SEND</a>
      </section>     

    </section>
    
  </section>

</section>

<style>
  h2, h3 {
    font-family: Arial, Helvetica, sans-serif;
  }

  p{
    font-family: "PT Sans", sans-serif;

  }

  input, textarea:focus-visible{
    outline: none;
  }
</style>
