<style>
  h2 {
    margin: 24px 0 10px 0;
  }

  h1,
  h2 {
    font-family: "Roboto", sans-serif;
    display: inline-block;
    position: relative;
  }

  p {
    font-family: "PT Sans", sans-serif;
  }

  h1::after,
  h2::after {
    content: "";
    position: absolute;
    display: block;
    width: 100%;
    height: 3px;
    background: #c24e3d;
  }

  ul{
    list-style: circle;
